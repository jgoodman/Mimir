% layout 'default';
% title 'Mimir - Status';
<h1><%= $name %></h2>
% foreach my $branch (@$branches) {
    <h1><a href="/branch/<%= $branch->{'branch_id'} %>"><%= $branch->{'name'} %></a></h1>
    % foreach my $node (@{$branch->{'nodes'}}) {
        <h2><a href="/node/<%= $node->{'node_id'} %>"><%= $node->{'name'} %></a></h2>
    % }
% }

