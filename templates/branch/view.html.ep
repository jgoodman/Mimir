% layout 'default';
% title 'Mimir - Node';
<h1><%= $title %></h2>
% foreach my $node (@$nodes) {
    <h2><%= $node->{'title'} %></h2>
    % foreach my $leaf (@{$node->{'leaves'}}) {
        <p><a href="/leaf/<%= $leaf->{'leaf_id'} %>"><%= $leaf->{'content'} %></a></p>
    % }

    %= include 'add-leaf-model', node_id => $node->{'node_id'}

    <hr>
% }
